      .page-actions {
        margin-top: 0.5rem;
      }
    }
    
    /* 深色模式适配 */
    @media (prefers-color-scheme: dark) {
      .ai-tool-link {
        background-color: var(--sl-color-canvas-dark);
        border-color: var(--sl-color-border-dark);
        color: var(--sl-color-text-dark);
      }
      
