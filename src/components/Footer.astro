---
// 导入Starlight的默认页脚组件
import DefaultFooter from '@astrojs/starlight/components/Footer.astro';

// 获取当前年份，用于自动更新版权信息
const currentYear = new Date().getFullYear();
---

<!-- 使用默认页脚并添加英伟达图标 -->
<DefaultFooter />
<footer class="sl-footer">
  <div class="sl-container">
    <!-- NVIDIA Inception Program Badge -->
    <div class="nvidia-badge-container" style="display: flex; justify-content: center; margin-bottom: 1rem;">
      <img src="/nvidia-inception-program-badge-rgb-for-screen.svg" alt="NVIDIA Inception Program" class="nvidia-badge" style="max-width: 200px; height: auto;" />
    </div>
    <!-- 版权信息 -->
    <div class="copyright-container" style="display: flex; justify-content: center; margin-bottom: 1rem;">
      <p style="color: var(--sl-color-text-muted); font-size: 0.9rem;">© {currentYear} medjed.ai. All rights reserved.</p>
    </div>
  </div>
</footer>